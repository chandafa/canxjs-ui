{
  "name": "canx-ui",
  "version": "1.1.1",
  "description": "Headless UI components for CanxJS Framework",
  "author": "CanxJS Team",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chandafa/canx.JS.git"
  },
  "keywords": ["canxjs", "ui", "headless", "components", "react"],
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "canx-ui": "./bin/cli.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --external react --external react-dom --jsx-import-source canxjs && bunx tsc --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "canxjs": "^1.3.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "tailwindcss": "^3.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "tailwind-merge": "^3.4.0"
  }
}
